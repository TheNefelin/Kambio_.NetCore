<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiKambio.Pages.LoginPage"
             Title="LoginPage">
   
    <Grid BackgroundColor="{StaticResource GreenSoft}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Source="logo.png" Aspect="AspectFill"/>

        <StackLayout Grid.Row="1" VerticalOptions="Center" Spacing="10" Padding="40,10">
            <Button Clicked="OnLoginApple" Text="Iniciar Sesión con Apple" CornerRadius="50" ImageSource="icon_apple_32.png"/>
            <Button Clicked="OnLoginGmail" Text="Iniciar Sesión con Gmail" CornerRadius="50" ImageSource="icon_gmail_32.png"/>
            <Button Text="Iniciar Sesión Instagram" CornerRadius="50" ImageSource="icon_instagram_32.png"/>
        </StackLayout>
    </Grid>

</ContentPage>